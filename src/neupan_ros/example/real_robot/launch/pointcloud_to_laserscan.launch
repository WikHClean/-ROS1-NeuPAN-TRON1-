<launch>
  <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
    <remap from="cloud_in" to="/livox/lidar"/>
    <remap from="scan" to="/scan"/>
    <param name="target_frame" value="laser_link"/>
    <param name="min_height" value="-0.3"/>  <!-- 从-0.1改为-0.3，检测更低的障碍物 -->
    <param name="max_height" value="0.8"/>   <!-- 从0.1改为0.8，检测更高的障碍物 -->
    <param name="angle_min" value="-3.14"/>
    <param name="angle_max" value="3.14"/>
    <param name="angle_increment" value="0.0087"/>
    <param name="scan_time" value="0.1"/>
    <param name="range_min" value="0.1"/>
    <param name="range_max" value="30.0"/>
    <param name="use_inf" value="true"/>
    <param name="concurrency_level" value="1"/>
  </node>
</launch>